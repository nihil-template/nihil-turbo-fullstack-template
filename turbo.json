{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_*"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "prisma/schema.prisma"
      ],
      "outputs": [
        "node_modules/.prisma/**"
      ]
    },
    "db:migrate": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "prisma/schema.prisma",
        "prisma/migrations/**"
      ],
      "outputs": [
        "prisma/migrations/**"
      ]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "prisma/schema.prisma"
      ]
    },
    "db:seed": {
      "dependsOn": [
        "^build",
        "db:generate"
      ],
      "inputs": [
        "prisma/seed.ts",
        "prisma/schema.prisma"
      ]
    }
  }
}